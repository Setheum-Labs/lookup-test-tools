{
  "private": true,
  "name": "test-tools",
  "version": "0.1.0",
  "description": "Tools for testing Ethereum libraries and services.",
  "main": "index.js",
  "files": [
    "index.js",
    "lib/*.js",
    "lib/contracts/*.js",
    "bin/*.js"
  ],
  "bin": {
    "test-server": "bin/server.js"
  },
  "scripts": {
    "lint": "standard",
    "fetch-contract": "curl --fail -L 'https://raw.githubusercontent.com/ethcore/contracts/master/SimpleRegistry.sol' > contracts/SimpleRegistry.sol",
    "compile": "solcjs --abi --bin --optimize contracts/SimpleRegistry.sol",
    "test": "./bin/server.js -s & sleep 3; node test.js | tap-spec; s=$?; kill %1; exit $s",
    "prepush": "npm run lint && npm run fetch-contract && npm run compile && npm test",
    "prepublish": "npm run prepush"
  },
  "keywords": [
    "parity",
    "smart contracts",
    "ethereum",
    "testrpc",
    "tests"
  ],
  "author": "Ethcore Team <admin@ethcore.io>",
  "maintainers": [
    "Jannis R <mail@jannisr.de>"
  ],
  "license": "GPL-3.0",
  "repository": "ethcore/test-tools",
  "engine": {
    "node": ">=7"
  },
  "dependencies": {
    "@parity/parity.js": "^0.3.68",
    "ethereumjs-testrpc": "^3.0.3",
    "minimist": "^1.2.0",
    "solc": "^0.4.9"
  },
  "devDependencies": {
    "husky": "^0.13.1",
    "standard": "^8.6.0",
    "tape": "^4.6.3",
    "tap-spec": "^4.1.1"
  }
}
